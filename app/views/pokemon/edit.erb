<div class="row">

<form action="/pokemon/<%=@pokemon.id%>" method="post">
<input type="hidden" name="_method" value="patch">
<input type="hidden" name="p[name]" value="<%=@pokemon.name%>">
<input type="hidden" name="p[type_1]" value="<%=@pokemon.type_1%>">
<%if @pokemon.type_2 != nil %>
<input type="hidden" name="p[type_2]" value="<%=@pokemon.type_2%>">
<% end %>
<input type="hidden" name="p[weight]" value="<%=@pokemon.weight%>">
<input type="hidden" name="p[height]" value="<%=@pokemon.height%>">
<input type="hidden" name="p[shiny]" value="<%=@pokemon.shiny%>">

<div class="col-sm-6 pokegrid">
    <img class="<%= @pokemon.shiny %>" src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/<%=PokedexController.img_index(@pokemon.pokedex_number)%>.png">
</div>
<div class="col-sm-6 poke-bio">
    <h1><small>@<%= @trainer.username %>'s</small><br>
    <%= @pokemon.name.capitalize %></h1>
    <br>
    <p class="clearfix">
    Type: <%= @pokemon.type_1.capitalize %><% if @pokemon.type_2 != nil%>, <%= @pokemon.type_2.capitalize %><% end %><br>
    Height: <%= @pokemon.height/10.to_f %> m<br>
    Weight: <%= @pokemon.weight/10.to_f %> kg<br>
    <span class="level">Level </span>
    <input class="level-range" type="range" name="p[level]" min="1" max="100" value="<%= @pokemon.level %>" step="1">
    </p>
    <input type="submit" class="btn btn-warning" value="Complete Training">
    
</div>
</div>
<hr>
<div class="row poke-stats">
<div class="col-md-4 col-xs-6">
    <h3>Health</h3>
    <input type="range" name="p[hp]" min="<%=@base.hp%>" max="<%=(@base.hp+99)*2%>" value="<%= @pokemon.hp %>" step="1">
    <p><%= @pokemon.hp %></p>
</div>
<div class="col-md-4 col-xs-6">
    <h3>Attack</h3>
    <input type="range" name="p[attack]" min="<%=@base.attack%>" max="<%=(@base.attack+99)*2%>" value="<%= @pokemon.attack %>" step="1">
    <p><%= @pokemon.attack %></p>
</div>
<div class="col-md-4 col-xs-6">
    <h3>Speed</h3>
    <input type="range" name="p[speed]" min="<%=@base.speed%>" max="<%=(@base.speed+99)*2%>" value="<%= @pokemon.speed %>" step="1">
    <p><%= @pokemon.speed %></p>
</div>
<div class="col-md-4 col-xs-6">
    <h3>Defense</h3>
    <input type="range" name="p[defense]" min="<%=@base.defense%>" max="<%=(@base.defense+99)*2%>" value="<%= @pokemon.defense %>" step="1">
    <p><%= @pokemon.defense %></p>
</div>
<div class="col-md-4 col-xs-6">
    <h3>Sp. Attack</h3>
    <input type="range" name="p[special_attack]" min="<%=@base.special_attack%>" max="<%=(@base.special_attack+99)*2%>" value="<%= @pokemon.special_attack %>" step="1">
    <p><%= @pokemon.special_attack %></p>
</div>
<div class="col-md-4 col-xs-6">
    <h3>Sp. Defense</h3>
    <input type="range" name="p[special_defense]" min="<%=@base.special_defense%>" max="<%=(@base.special_defense+99)*2%>" value="<%= @pokemon.special_defense %>" step="1">
    <p><%= @pokemon.special_defense %></p>
</div>
</form>
</div>