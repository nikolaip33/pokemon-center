<div class="row trainer-info">
<div class="col-xs-12">
    <h3>@<%= @trainer.username %> <a href="/trainer/<%=@trainer.id%>/edit" class="small"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a></h3>
    <%=@trainer.email%>
    <%if @trainer.pokemon.size >= 10 %>
    <br>Veteran Trainer
    <%elsif @trainer.pokemon.size >= 30 %>
    <br>Elite Trainer
    <%else%>
    <br>Novice Trainer
    <% end %>
</div>
</div>
<hr>
<div class="row">
    <% @trainer.pokemon.each do |p| %>
    <div class="col-sm-3 col-xs-6  poke-grid text-center">
        <a href="/pokemon/<%= p.id %>">
            <div class="inner">
            <img class="<%= p.shiny %>" src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/<%=PokedexController.img_index(p.pokedex_number)%>.png">
                <p><%=p.name.capitalize %><br>Level:<%= p.level %><p>
            </div>
        </a>
    </div>

    <% end %>
</div>