<div class="row">
    <div class="col-sm-6 pokegrid">
        <img src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/<%=PokedexController.img_index(@pokemon.id)%>.png">
    </div>
    <div class="col-sm-6">
        <h1><%= @pokemon.name.capitalize %>  <%=PokedexController.img_index(@pokemon.id)%></h1>
        <p>
        Type: <%= @pokemon.type_1.capitalize %><% if @pokemon.type_2 != nil%>, <%= @pokemon.type_2.capitalize %><% end %><br>
        Height: <%= @pokemon.height %><br>
        Weight: <%= @pokemon.weight %><br>
        Level: <%= @pokemon.level %><br>
        </p>

        <form method="post" action="/pokemon">
            <input type="hidden" name="id" paravalue="<%=@pokemon.id%>">
            <input class="btn btn-success" type="submit" value="Catch">
        </form>
        
    </div>
</div>

<div class="row stat-boxes">
    <div class="col-md-4 col-xs-6">
        <h3>Health</h3>
        <p><%= @pokemon.hp %></p>
    </div>
    <div class="col-md-4 col-xs-6">
        <h3>Attack</h3>
        <p><%= @pokemon.attack %></p>
    </div>
    <div class="col-md-4 col-xs-6">
        <h3>Speed</h3>
        <p><%= @pokemon.speed %></p>
    </div>
    <div class="col-md-4 col-xs-6">
        <h3>Defense</h3>
        <p><%= @pokemon.defense %></p>
    </div>
    <div class="col-md-4 col-xs-6">
        <h3>Sp. Attack</h3>
        <p><%= @pokemon.special_attack %></p>
    </div>
    <div class="col-md-4 col-xs-6">
        <h3>Sp. Defense</h3>
        <p><%= @pokemon.special_defense %></p>
    </div>
</div>