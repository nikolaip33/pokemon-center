<div class="row">
    <div class="col-sm-6 pokegrid">
        <img src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/<%=PokedexController.img_index(@pokemon.id)%>.png">
    </div>
    <div class="col-sm-6">
        <h1><%= @pokemon.name.capitalize %>  #<%= @pokemon.id %></h1>
        <p>
        Type: <%= @pokemon.type_1.capitalize %><% if @pokemon.type_2 != nil%>, <%= @pokemon.type_2.capitalize %><% end %><br>
        Height: <%= @pokemon.height %><br>
        Weight: <%= @pokemon.weight %><br>
        Level: <%= @pokemon.level %><br>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-sm-6">
        <h3>HP</h3>
    </div>
    <div class="col-md-4 col-sm-6">
        <h3>Attack</h3>
    </div>
    <div class="col-md-4 col-sm-6">
        <h3>Speed</h3>
    </div>
    <div class="col-md-4 col-sm-6">
        <h3>Defense</h3>
    </div>
    <div class="col-md-4 col-sm-6">
        <h3>Special Attack</h3>
    </div>
    <div class="col-md-4 col-sm-6">
        <h3>Special Defense</h3>
    </div>
</div>